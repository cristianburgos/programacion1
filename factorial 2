float fact(float x);


int main()

{
	float x,y,z;
	cout<<"Ingrese el numero el cual desea hallar su factorial"<<endl;
	cin>>x;
	z=fact(x);
	cout<<"el resultado de la operacion es:"<<z<<endl;
getch();
