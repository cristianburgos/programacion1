// Ejemplo: calcular el volumen de un cilindro,
//se ingresan como datos de entrada su radio y altura
#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
float vol_cilindro(float r, float a);//prototipo de la funcion
int main() 
{
    float radio, altura, volumen;	
    cout <<"Ingrese el radio:" ;
	cin>>radio;
    cout<<"Ingrese la altura:";
	cin>>altura;
    volumen= vol_cilindro(radio,altura);//llamada a la funcion
    cout <<"el volumen es:"<<volumen;
    getch();
    return 0; 
 }
float vol_cilindro(float r, float a)// declaracion de la funcion
 { float v;
    v= 3.141516*r*r*a ;	
    return v; 


}
