// practico 6-8.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
	
using namespace std;
void main ()
{
	float n,x,i,factorial,suma;
	suma=0;
	factorial=1;
	do
	{
		cout<<"ingrese el valor de n: ";
		cin>>n;
		cout<<"ingrese el valor que desea operar: ";
	    cin>>x;
	}while (n<=0 && x<=0);
	for (i=1;i<=n;i++)
	{
		factorial=factorial+i;
		suma=suma+(pow (x,i)/(i*factorial));
	cout<<"el resultado de la operacion es: "<<suma<<endl;
	getch ();}
}
